<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
      android:background="@drawable/shop_background">

      <ImageView
          android:id="@+id/shine_effect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/shine_effect"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="95dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageButton
                android:id="@+id/gacha1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:background="#00000000"
                android:src="@drawable/gacha1" />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="₩ 11,000"
                android:textSize="20dp"/>

        </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/gacha2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:src="@drawable/gacha2" />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="₩ 33,000"
            android:textSize="20dp"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/gacha3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:src="@drawable/gacha3" />



        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="₩ 110,000"
            android:textSize="20dp"/>

      </LinearLayout>






    </LinearLayout>




  </androidx.constraintlayout.widget.ConstraintLayout>

  <data>

    <variable
      name="vm"
      type="com.skydoves.pokedexar.ui.shop.ShopViewModel" />
  </data>

</layout>