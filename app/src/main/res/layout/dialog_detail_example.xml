<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_img"
            android:src="@drawable/pokemon1"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pikachu"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_type1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="타입1"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/detail_type2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="타입2"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/detail_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP"/>

            <TextView
                android:id="@+id/detail_atk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATK"/>
            <TextView
                android:id="@+id/detail_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEF"/>
            <TextView
                android:id="@+id/detail_stk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STK"/>
            <TextView
                android:id="@+id/detail_sef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEF"/>
            <TextView
                android:id="@+id/detail_spd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPD"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_skill1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="스킬1"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/detail_skill2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="스킬2"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/detail_skill3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="스킬3"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/detail_skill4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="스킬4"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/release_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="놓아주기"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/close_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="닫기"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>